{
  "name": "@woovi/node-sdk",
  "version": "1.0.0",
  "description": "Woovi NodeJS SDK",
  "main": "./src/index.ts",
  "repository": "git@github.com:criskell/woovi-nodejs-sdk.git",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.4.2",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.0",
    "eslint": "^9.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "commit": "cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "lint": "biome lint ./src ./tests",
    "format": "biome check ./src ./tests --apply",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
