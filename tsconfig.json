{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true, 
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true, 
  },
  "paths": {
    "@woovi/node-sdk": [
      "./src/index.ts"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "e2e"
  ]
}
